<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#548E5C"
    android:orientation="vertical"
    android:padding="25dp">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ya existe un registro en la misma fecha y con el mismo tipo de pase, recuerda que solo puedes tener un pase de salida, entrada o  intermedio"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/botonok"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/boton_principal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="ok"
        android:textColor="@android:color/white" />
</LinearLayout>