<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondo"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha=".5"
        android:src="@drawable/logotdt" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="CÃ¡lculo de Tiempo Extra, Concepto 37"
                    android:textColor="@color/colorletras"
                    android:textSize="23dp"
                    android:textStyle="bold">

                </TextView>

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titulo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/fondoedittext"
                    android:digits="0123456789."
                    android:hint="Concepto 002"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/colorletras" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/fondoedittext"
                    android:digits="0123456789."
                    android:hint="Concepto 011"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/colorletras" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/fondoedittext"
                    android:digits="0123456789."
                    android:hint="Concepto 020"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/colorletras" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/fondoedittext"
                    android:digits="0123456789."
                    android:hint="Concepto 022 o 023 o 063"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/colorletras" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/fondoedittext"
                    android:digits="0123456789."
                    android:hint="Concepto 050"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/colorletras" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/fondoedittext"
                    android:digits="0123456789."
                    android:hint="HORAS DE TIEMPO EXTRA"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/colorletras" />

                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/fondoedittext"
                    android:digits="0123456789."
                    android:hint="JORNADA DE 8, 6.5 O 12"
                    android:inputType="number"
                    android:padding="5sp"
                    android:textColor="@color/colorletras" />


                <Button
                    android:id="@+id/btnSumar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editText7"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/boton_principal"
                    android:text="CALCULAR"
                    android:textColor="@color/colorletras" />

                <TextView
                    android:id="@+id/textViewResultado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnSumar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="50sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="50sp"
                    android:background="@drawable/fondoedittext"
                    android:padding="10sp"
                    android:text="Su pago de tiempo extra es de =  "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/colorletras" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adbanner" />

</RelativeLayout>