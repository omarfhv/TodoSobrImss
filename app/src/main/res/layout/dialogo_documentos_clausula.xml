<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodialogo"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView

        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:id="@+id/titulodialogdocs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Este es el formato que tendran que llenar cuando soliciten el prestamo de la clausula 97."
        android:textColor="@color/colorletras"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imagendialogdoc"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_below="@+id/titulodialogdocs"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/clausus" />

    <Button
        android:layout_marginBottom="20dp"
        android:id="@+id/botonok"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imagendialogdoc"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/boton_principal"
        android:text="ok"
        android:textColor="@color/colorletras"/>

</RelativeLayout>