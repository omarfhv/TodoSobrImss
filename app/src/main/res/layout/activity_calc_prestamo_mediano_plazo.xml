<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/botonblanco"
    android:orientation="vertical"
    tools:context=".CalcPrestamos">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULO DEL CREDITO HIPOTECARIO A MEDIANO PLAZO."
        android:textColor="#154f3a"
        android:textSize="23dp">

    </TextView>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="40dp"
        android:digits="0123456789."
        android:hint="Concepto 002"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="20dp"
        android:digits="0123456789."
        android:hint="Concepto 011"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/botonblanco"
        android:text="CALCULAR"
        android:textColor="#154f3a" />


    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSumar"
        android:layout_marginTop="50dp"
        android:text="SU CREDITO HIPOTECARIO DE MEDIANO PLAZO = "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#154f3a" />


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"

        android:layout_gravity="bottom"

        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/adbanner" />

</RelativeLayout>