<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha=".5"
        android:src="@drawable/logotdt" />

    <TextView
        android:id="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:gravity="center"
        android:text=" MARCA DE INCLUSIÓN "
        android:textColor="@color/colorletras"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView1"
        android:layout_below="@id/texto1"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/botonincludos"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" MARCA DE INCLUSION 2 Y 3 "
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/botoninclucuatro"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/botonincludos"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" MARCA DE INCLUSIÓN 4 Y 9 "
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/botoninclunueve"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/botoninclucuatro"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" MARCA DE INCLUSIÓN 9 Y 4  "
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/botonincluuno"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/botoninclunueve"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" MARCA DE INCLUSION 1 Y 1 "
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/botoninclucero"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/botonincluuno"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" MARCA DE INCLUSION 0 "
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adbanner" />


</RelativeLayout>