<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondo">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:alpha=".5"
        android:src="@drawable/logotdt" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Periodos Semestrales"
                android:textColor="@color/colorletras"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/texto12"
                android:gravity="center"
                android:text=" AÑOS DE ANTIGÜEDAD "
                android:textColor="@color/colorletras"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/botonanouno"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/texto1"
                android:layout_gravity="center"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:layout_margin="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1 AÑO "
                    android:textColor="@color/colorletras"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/botonanodos"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/botonanouno"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" 2 AÑOS "
                    android:textColor="@color/colorletras"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/botonanotres"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/botonanodos"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" 3 AÑOS "
                    android:textColor="@color/colorletras"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/botonanocuatro"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/botonanotres"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" 4 AÑOS "
                    android:textColor="@color/colorletras"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/botonanocinco"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/botonanocuatro"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" 5 AÑOS "
                    android:textColor="@color/colorletras"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/botonanomas"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/botonanocinco"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" MAS DE 5 AÑOS "
                    android:textColor="@color/colorletras"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/botoncalcuva"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/botonanomas"
                android:layout_gravity="center"
                android:layout_margin="10sp"
                android:background="@drawable/boton_principal"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" CALCULADORA DE PAGO DE VACACIONES"
                    android:textColor="@color/colorletras"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adbanner" />

</RelativeLayout>