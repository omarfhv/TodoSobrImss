<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoPases">


    <TextView
        android:id="@+id/texto25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" INFORMACION PASES DE ENTRADA, INTERMEDIOS Y SALIDA"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#154f3a"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/texto25"
        android:id="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" NOTA: NO VIENE ESPECIFICADO CON CUANTO TIEMPO SE PIDEN LOS PASES, PERO SI ES RECOMENDABLE HACERLO CON UNAS HORAS DE ANTICIPACION."
        android:gravity="center"
        android:textColor="#C02222"
        android:textStyle="bold" />

    <ScrollView
        android:layout_below="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/boton29"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_principal"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_below="@+id/texto1"
                        android:id="@+id/texto2"
                        android:layout_marginVertical="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Artículo 29."
                        android:textSize="25dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/boton30"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/boton_principal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_below="@+id/texto2"
                        android:id="@+id/texto3"
                        android:layout_marginVertical="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Artículo 30."
                        android:textSize="25dp"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/boton30bis"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/boton_principal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_below="@+id/texto3"
                        android:id="@+id/texto4"
                        android:layout_marginVertical="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="230dp"
                        android:text="Artículo 30 Bis."
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:layout_below="@+id/texto3"
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="250dp"
                    android:background="@drawable/pases"
                    ></ImageView>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"

        ads:adSize="SMART_BANNER"

        ads:adUnitId="@string/adbanner"
        android:layout_alignParentLeft="true" />

</RelativeLayout>