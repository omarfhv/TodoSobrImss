        android:background="@drawable/boton_principal"
        android:onClick="onclick"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="   Continuar   "
        android:textColor="@color/colorletras"/>


</LinearLayout>

