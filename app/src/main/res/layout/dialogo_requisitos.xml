<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondo"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Los requisitos son:"
        android:textColor="@color/colorletras"
        android:textSize="30dp"
        android:textStyle="bold" />


    <TextView
        android:padding="15sp"
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="20dp"
        android:gravity="fill"
        android:text="* Ser trabajador (a) de base\n
* Tener 3 años de antigüedad laboral minimo\n
* Presentar dos últimos recibos de pago\n
* Presentar gafete\n
* Requisitar solicitud\n
* No podran ejercer el CREDITO, los trabajadores que presenten los siguientes conceptos: 106,130,133,134,136,154,155,160,166,170 y 190\n
* En cuanto salga la convocatoria se avisara\n"
        android:textColor="@color/colorletras"
        android:textSize="20dp" />


    <Button
        android:id="@+id/botonok"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@+id/texto"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/boton_principal"
        android:text="ok"
        android:textColor="@color/colorletras"/>


</RelativeLayout>